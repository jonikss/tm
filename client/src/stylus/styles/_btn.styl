$btn
    display inline-block
    position relative
    font-size 1.4rem
    font-weight bold
    line-height 2rem!important
    text-transform uppercase
    text-decoration none
    padding 1.4rem 2.5rem 1.2rem 2.5rem
    background transparent
    border-radius .5rem
    text-align center
    cursor pointer
    color $color!important
    &:hover
        color #fff!important
    transition color .2s, background .2s!important



    &[disabled]
        opacity .5
        cursor not-allowed
        &:hover
            background none
            color $color!important
        &:hover:after, &:hover:before
            border-color $red
            width 100%
            height 100%

$btn-icon
    position relative
    &:after
        content ''
        position absolute
        top 50%
        transform translate(0,-50%)


.btn
    @extend $btn
    border 2px solid $blue
    color $color!important
    &:hover
        border 2px solid $blue!important
        background $blue
    &:active
        opacity 1
        background #2fa3eb!important

.btn-arrow, .btn-next
    @extend .btn
    @extend $btn-icon
    padding-right 4.5rem
    &:after
        icon 'arrow-right-blue'
        right 2rem
    &:hover:after
        icon 'arrow-right-white'

.btn-prev
    @extend .btn-next
    padding-right 2.5rem
    padding-left 4.5rem
    &:after
        right auto
        left 2rem
        transform translate(0,-50%) rotate(180deg)

.btn-down
    @extend .btn-arrow
    &:after
        transform-origin 50% 50%
        transform rotate(90deg) translate(-50%,0)


.btn-pink
    @extend $btn
    border 2px solid $pink

    &:hover
        border 2px solid $pink!important
        background $pink
    &:active
        opacity 1
        background #f658ad!important

.btn-pink-arrow
    @extend .btn-pink
    @extend $btn-icon
    padding-right 4.5rem
    &:after
        icon 'arrow-right-pink'
        right 2rem
    &:hover:after
        icon 'arrow-right-white'
