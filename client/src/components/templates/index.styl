@import '../../stylus/grids/grids.styl'
svg(name, sizes=false)
    images_url = '../../images/svg/'

    if sizes
        block_size = image-size(images_url + name + '.svg')
        width block_size[0]
        height block_size[1]

    background-image embedurl(images_url + name + '.svg')

.templates
    width 100%




    &__items
        @extend $row

    &__item
        col('lg', 4)
        col('md', 6)
        margin-bottom 3rem

    &__paginator
        margin 3rem 0

    &__loading
        text-align center
        opacity .8
