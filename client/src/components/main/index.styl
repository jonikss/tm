@import '../../stylus/grids/grids.styl'

.main


    &__wrap
        @extend $container
        height 100%

    &__content
        height 100%
        background-color rgba(92, 209, 235, 0.5)
        border 1px solid #85d6e7
        border-radius 8px
        padding 3rem

    &__row
        @extend $row

    &__left
        col('xl', 3)
        col('md', 4)
        display flex

    &__right
        col('xl', 9)
        col('md', 8)
        display flex

    &__right-inner
        width 100%

.router-enter
    opacity 0
    //transform translateX(-250px)

.router-enter.router-enter-active
    opacity 1
    //transform translateX(0)
    transition .6s

.router-leave
    opacity: 1;
    //transform: translateX(0);


.router-leave.router-leave-active
    opacity: 0;
    //transform: translateX(250px);
    transition: .6s;


.templates-enter
    opacity 0.01
    transform translateX(-100%)


.templates-enter.templates-enter-active
    opacity 1
    transform translateX(0)
    transition opacity 1s ease-in, transform 1s ease-in


.templates-leave
    opacity 1
    transform translateX(0)


.templates-leave.templates-leave-active
    opacity 0.01
    transform translateX(0)
    transition opacity 1s ease-in, transform 1s ease-in
